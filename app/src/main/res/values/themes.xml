<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Windows XP Theme (Default / Base) -->
    <style name="Base.Theme.GokiXP" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Disable automatic tinting by setting neutral colors -->
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryVariant">@android:color/transparent</item>
        <item name="colorSecondary">@android:color/transparent</item>
        <item name="colorSecondaryVariant">@android:color/transparent</item>
        <item name="colorAccent">@android:color/transparent</item>
        <item name="colorControlNormal">@android:color/black</item>
        <item name="colorControlActivated">@android:color/black</item>
        <item name="colorControlHighlight">@android:color/transparent</item>
        <item name="colorButtonNormal">@android:color/transparent</item>
        <!-- Remove tinting from controls -->
        <item name="android:colorControlNormal">@android:color/black</item>
        <item name="android:colorControlActivated">@android:color/black</item>
        <item name="android:colorControlHighlight">@android:color/transparent</item>
        <!-- Windows XP specific attributes -->
        <item name="primaryFontFamily">@font/tahoma_font_family</item>
        <item name="secondaryFontFamily">@font/tahoma_font_family</item>
        <item name="scrollbarTrackDrawable">@drawable/scrollbar_track_xp</item>
        <item name="scrollbarThumbDrawable">@drawable/scrollbar_thumb_xp</item>
        <item name="winButtonStyle">@style/WinXPButton</item>
        <item name="windowBackgroundColor">#d4cec6</item>
        <item name="menuBarBackground">@drawable/menu_bar</item>
        <item name="solitareGreen">@color/solitare_green</item>
        <item name="notificationBubble">@drawable/bubble</item>
        <item name="notificationBubbleTitleColor">#000000</item>


    </style>

    <!-- Windows Vista Theme -->
    <style name="Theme.GokiXP.Vista" parent="Base.Theme.GokiXP">
        <item name="primaryFontFamily">@font/segoeui_font_family</item>
        <item name="secondaryFontFamily">@font/segoeui_font_family</item>
        <item name="scrollbarTrackDrawable">@drawable/scrollbar_track_vista</item>
        <item name="scrollbarThumbDrawable">@drawable/scrollbar_thumb_vista</item>
        <item name="winButtonStyle">@style/WinVistaButton</item>
        <item name="windowBackgroundColor">#cad9e7</item>
        <item name="menuBarBackground">@drawable/menu_bar_vista</item>
        <item name="solitareGreen">@drawable/solitare_green</item>
        <item name="notificationBubble">@drawable/bubble_vista</item>
        <item name="notificationBubbleTitleColor">#4C54C7</item>


    </style>

    <!-- Windows Classic Theme -->
    <style name="Theme.GokiXP.Classic" parent="Base.Theme.GokiXP">
        <item name="primaryFontFamily">@font/micross_font_family</item>
        <item name="secondaryFontFamily">@font/micross_font_family</item>
        <item name="scrollbarTrackDrawable">@drawable/scrollbar_track_98</item>
        <item name="scrollbarThumbDrawable">@drawable/win98_start_menu_border</item>
        <item name="winButtonStyle">@style/Win98Button</item>
    </style>


    <!-- Button Widget Styles -->
    <style name="Win98Button" parent="@android:style/Widget.Button">
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">@font/micross_block</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:background">@drawable/win98_start_menu_border</item>
        <item name="android:backgroundTint">@null</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="WinXPButton" parent="@android:style/Widget.Button">
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">@font/tahoma_font_family</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:backgroundTint">@null</item>
        <item name="android:background">@drawable/vista_button</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="WinVistaButton" parent="@android:style/Widget.Button">
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">@font/segoeui_font_family</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:backgroundTint">@null</item>
        <item name="android:background">@drawable/vista_button</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="MenuBarItem" parent="@android:style/Widget.TextView">
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">?primaryFontFamily</item>
        <item name="android:textSize">11sp</item>
        <item name="android:layout_marginEnd">10dp</item>
    </style>


    <style name="MenuBarItemDisabled" parent="MenuBarItem">
        <item name="android:textColor">#666666</item>
    </style>

    <!-- Light AlertDialog Theme -->
    <style name="LightAlertDialog" parent="Theme.Material3.Light.Dialog.Alert">
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:textColorSecondary">#000000</item>
        <item name="android:textColor">#000000</item>
        <item name="android:background">#FFFFFF</item>
        <item name="colorAccent">#0078D7</item>
        <item name="android:buttonBarButtonStyle">@style/LightDialogButton</item>
    </style>

    <style name="LightDialogButton" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">#0078D7</item>
    </style>
</resources>