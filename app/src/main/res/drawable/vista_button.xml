<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Half-and-half vertical split -->
    <gradient
        android:startColor="#ebeeef"
        android:endColor="#d4d8da"
        android:angle="270"
        android:centerY="0.5"
        android:useLevel="false" />

    <!-- Border -->
    <stroke
        android:width="1dp"
        android:color="#70726f" />

    <!-- Rounded corners -->
    <corners android:radius="2dp" />
</shape>
