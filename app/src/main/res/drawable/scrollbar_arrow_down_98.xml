<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Windows 98 scroll arrow button with 3D effect -->
    <item>
        <!-- Background -->
        <shape android:shape="rectangle">
            <solid android:color="#d3cec7" />
        </shape>
    </item>

    <!-- Top highlight (white) -->
    <item android:top="0dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#ffffff" />
        </shape>
    </item>

    <!-- Left highlight (white) -->
    <item android:left="0dp" android:right="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#ffffff" />
        </shape>
    </item>

    <!-- Bottom shadow (dark gray) -->
    <item android:top="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#808080" />
        </shape>
    </item>

    <!-- Right shadow (dark gray) -->
    <item android:left="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#808080" />
        </shape>
    </item>

    <!-- Inner button area -->
    <item android:left="1dp" android:top="1dp" android:right="1dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#d3cec7" />
        </shape>
    </item>

    <!-- Down arrow -->
    <item android:gravity="center">
        <shape android:shape="rectangle">
            <size android:width="6dp" android:height="4dp" />
            <!-- This would be an arrow shape - simplified as triangle -->
        </shape>
    </item>
</layer-list>