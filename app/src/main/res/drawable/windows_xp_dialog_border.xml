<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Outer border stroke (darker) -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="#0024b0" />
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>

    <!-- Inner border stroke (lighter) -->
    <item
        android:left="1dp"
        android:right="1dp"
        android:bottom="1dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="#316AC5" />
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>

</layer-list>