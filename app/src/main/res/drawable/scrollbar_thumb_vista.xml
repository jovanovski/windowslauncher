<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Constrain entire thumb to 16dp width -->
    <item android:width="16dp">
        <layer-list>
            <!-- Background gradient -->
            <item>
                <shape android:shape="rectangle">

                <!-- Half-and-half vertical split -->
                <gradient
                    android:startColor="#ebeeef"
                    android:endColor="#d4d8da"
                    android:angle="180"
                    android:centerY="0.5"
                    android:useLevel="false" />

                <!-- Border -->
                <stroke
                    android:width="1dp"
                    android:color="#70726f" />

                <!-- Rounded corners -->
                <corners android:radius="2dp" />
            </shape>
            </item>

            <!-- Middle image overlay -->
            <item android:gravity="center">
                <bitmap
                    android:src="@drawable/vista_scroll_middle"
                    android:gravity="center" />
            </item>
        </layer-list>
    </item>

</layer-list>