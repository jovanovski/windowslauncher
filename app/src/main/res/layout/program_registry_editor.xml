<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_height="400dp"
    android:clickable="true"
    >

    <ImageView
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:src="@drawable/regedit_screen"/>

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="358dp"
        android:layout_height="350dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="5dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scrollbars="vertical"
        android:scrollbarStyle="outsideOverlay"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbarSize="16dp"
        android:scrollbarFadeDuration="0"
        android:scrollbarDefaultDelayBeforeFade="0"
        android:scrollbarThumbVertical="?scrollbarThumbDrawable"
        android:scrollbarTrackVertical="?scrollbarTrackDrawable"
        android:fadeScrollbars="false"
        android:background="@android:color/white">

        <TableLayout
            android:id="@+id/preferences_table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1"
            android:shrinkColumns="1"/>
    </ScrollView>

    <LinearLayout
        android:id="@+id/button_container"
        android:layout_width="138dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="26dp"
        android:orientation="vertical"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="237dp"
        android:weightSum="7">

        <TextView
            android:id="@+id/add_button"
            style="?winButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:backgroundTint="@null"
            android:clickable="true"
            android:focusable="true"
            android:text="Add"
            android:textColor="#000000"
            android:textSize="9sp" />

            <TextView
                android:id="@+id/edit_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:textColor="#000000"
                android:textSize="9sp"
                style="?winButtonStyle"
                android:backgroundTint="@null"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginBottom="2dp"/>

            <TextView
                android:id="@+id/delete_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:textColor="#000000"
                android:textSize="9sp"
                style="?winButtonStyle"
                android:backgroundTint="@null"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginBottom="2dp" />

            <TextView
                android:id="@+id/export_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Export"
                android:textColor="#000000"
                android:textSize="9sp"
                style="?winButtonStyle"
                android:backgroundTint="@null"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginBottom="2dp" />

            <TextView
                android:id="@+id/import_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Import"
                android:textColor="#000000"
                android:textSize="9sp"
                style="?winButtonStyle"
                android:backgroundTint="@null"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginBottom="6dp" />

            <CheckBox
                android:id="@+id/auto_sync_checkbox"
                style="@style/Win95.CheckBox"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Auto sync to Drive"
                android:textColor="#000000"
                android:fontFamily="@font/micross_block"
                android:textSize="11sp"
                android:checked="false"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                android:paddingLeft="4dp"
                android:layout_marginStart="2dp"
                android:layout_marginBottom="2dp" />

            <TextView
                android:id="@+id/last_sync_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Never synced"
                android:textColor="#666666"
                android:textSize="8sp"
                android:fontFamily="@font/micross_block"
                android:gravity="start"
                android:lines="1"
                android:maxLines="1"
                android:layout_marginTop="-5dp"
                android:paddingStart="20dp"
                android:layout_marginStart="2dp"
                android:paddingEnd="4dp" />

        </LinearLayout>


</RelativeLayout>