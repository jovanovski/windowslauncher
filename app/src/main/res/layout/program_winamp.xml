<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="358dp"
    android:layout_height="415dp"
    android:clickable="true"
    android:background="@android:color/transparent"
    >

    <ImageView
        android:id="@+id/winamp_background"
        android:layout_width="358dp"
        android:layout_height="415dp"
        android:src="@drawable/winamp_screen"/>

    <ImageView
        android:id="@+id/winamp_status"
        android:layout_width="123dp"
        android:layout_height="60dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="27dp"
        android:src="@drawable/winamp_stopped"/>


    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/winamp_playing_animation"
        android:layout_width="104dp"
        android:layout_height="28dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="55dp"
        android:src="@drawable/winamp_playing_animation"
        android:visibility="gone"
        android:adjustViewBounds="true" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/dialog_title_bar"
            android:layout_width="315dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"/>
        <ImageView
            android:id="@+id/dialog_minimize_button"
            android:layout_width="20dp"
            android:layout_height="match_parent"/>
        <ImageView
            android:id="@+id/dialog_close_button"
            android:layout_width="23dp"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <TextView
        android:id="@+id/track_name"
        android:layout_width="203dp"
        android:layout_height="wrap_content"
        android:lines="1"
        android:maxLines="1"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:scrollHorizontally="true"
        android:text=""
        android:textColor="#00FF00"
        android:fontFamily="@font/micross_block_bold"
        android:letterSpacing="0.1"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="143dp"
        />

    <TextView
        android:id="@+id/track_seconds"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:lines="1"
        android:maxLines="1"
        android:textSize="30dp"
        android:text="00:00"
        android:textColor="#00FF00"
        android:fontFamily="@font/micross_block"
        android:letterSpacing="0.1"
        android:layout_marginTop="28dp"
        android:layout_marginLeft="40dp"
        />


    <View
        android:id="@+id/previous_button"
        android:layout_width="30dp"
        android:layout_height="24dp"
        android:layout_marginTop="114dp"
        android:layout_marginLeft="20dp"/>


    <View
        android:id="@+id/play_button"
        android:layout_width="30dp"
        android:layout_height="24dp"
        android:layout_marginTop="114dp"
        android:layout_marginLeft="50dp"/>

    <View
        android:id="@+id/pause_button"
        android:layout_width="30dp"
        android:layout_height="24dp"
        android:layout_marginTop="114dp"
        android:layout_marginLeft="80dp"/>

    <View
        android:id="@+id/stop_button"
        android:layout_width="30dp"
        android:layout_height="24dp"
        android:layout_marginTop="114dp"
        android:layout_marginLeft="110dp"/>


    <View
        android:id="@+id/next_button"
        android:layout_width="30dp"
        android:layout_height="24dp"
        android:layout_marginTop="114dp"
        android:layout_marginLeft="140dp"/>


    <View
        android:id="@+id/theme_button"
        android:layout_width="40dp"
        android:layout_height="34dp"
        android:layout_marginTop="114dp"
        android:layout_marginLeft="310dp"/>

    <View
        android:id="@+id/playlist_add_button"
        android:layout_width="37dp"
        android:layout_height="28dp"
        android:layout_marginTop="374dp"
        android:layout_marginLeft="12dp"/>

    <View
        android:id="@+id/playlist_remove_button"
        android:layout_width="37dp"
        android:layout_height="28dp"
        android:layout_marginTop="374dp"
        android:layout_marginLeft="50dp"/>


    <View
        android:id="@+id/playlist_next_button"
        android:layout_width="37dp"
        android:layout_height="28dp"
        android:layout_marginTop="374dp"
        android:layout_marginLeft="88dp"/>


    <View
        android:id="@+id/playlist_prev_button"
        android:layout_width="37dp"
        android:layout_height="28dp"
        android:layout_marginTop="374dp"
        android:layout_marginLeft="126dp"/>


    <View
        android:id="@+id/playlist_show_all"
        android:layout_width="37dp"
        android:layout_height="28dp"
        android:layout_marginTop="374dp"
        android:layout_marginLeft="294dp"/>

    <TextView
        android:id="@+id/playlist_name"
        android:text="PLAYLIST NAME"
        android:textColor="#00FF00"
        android:fontFamily="@font/micross_block_bold"
        android:layout_width="120dp"
        android:layout_height="12dp"
        android:paddingStart="2dp"
        android:paddingEnd="2dp"
        android:layout_marginTop="376dp"
        android:letterSpacing="0.1"
        android:layout_marginLeft="169dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:paddingLeft="20dp"
        android:paddingRight="10dp">
    <ImageView
        android:id="@+id/winamp_tab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/winamp_thumb"
        />
    </LinearLayout>


    <ScrollView
        android:layout_width="313dp"
        android:layout_height="184dp"
        android:layout_marginTop="179dp"
        android:layout_marginLeft="17dp">

        <TableLayout
            android:id="@+id/track_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="0"
            android:shrinkColumns="0">
        </TableLayout>
    </ScrollView>

</RelativeLayout>