<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:background="?windowBackgroundColor"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start">
        <ImageView
            android:layout_width="254dp"
            android:layout_height="78dp"
            android:background="@drawable/ie7_top_left"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="78dp"
            android:layout_weight="1"
            android:background="@drawable/ie7_top_middle"/>
        <ImageView
            android:layout_width="72dp"
            android:layout_height="78dp"
            android:background="@drawable/ie7_top_right"/>

    </LinearLayout>
    <EditText
        android:id="@+id/url_bar"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@android:color/transparent"
        android:layout_marginLeft="113dp"
        android:layout_marginRight="75dp"
        android:layout_marginTop="9dp"
        android:textSize="11dp"
        android:text="www.google.com"
        android:textColor="@color/black"
        android:fontFamily="@font/segoeui_font_family"
        android:lines="1"
        android:maxLines="1"
        android:singleLine="true"
        android:imeOptions="actionGo"
        android:inputType="textUri"
        />


    <View
        android:id="@+id/ie_refresh_button"
        android:layout_width="30dp"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="30dp" />


    <View
        android:id="@+id/ie_back_button"
        android:layout_width="30dp"
        android:layout_height="39dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="0dp"
        android:layout_marginStart="0dp" />

    <View
        android:id="@+id/ie_forward_button"
        android:layout_width="30dp"
        android:layout_height="39dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="0dp"
        android:layout_marginStart="30dp" />

    <View
        android:id="@+id/ie_home_button"
        android:layout_width="50dp"
        android:layout_height="39dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="0dp" />


    <TextView
        android:id="@+id/tab_name"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:text="Site name"
        android:fontFamily="@font/segoeui_font_family"
        android:textColor="@color/black"
        android:textSize="13sp"
        android:lines="1"
        android:layout_marginTop="48dp"
        android:ellipsize="end"
        android:layout_marginStart="103dp"/>




    <WebView
        android:id="@+id/ie_web_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="78dp"
        android:layout_marginBottom="22dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:background="@color/context_menu_background">

    </WebView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:gravity="start">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="22dp"
            android:layout_weight="1"
            android:background="@drawable/ie7_bottom_left"/>
        <ImageView
            android:layout_width="54dp"
            android:layout_height="22dp"
            android:background="@drawable/ie7_bottom_right"/>

    </LinearLayout>

    <TextView
        android:id="@+id/status_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Done"
        android:fontFamily="@font/segoeui_font_family"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:layout_alignParentBottom="true"
        android:lines="1"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginBottom="3dp"
        android:layout_marginEnd="60dp"
        android:layout_marginStart="3dp"/>

</RelativeLayout>