<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="380dp"
    android:layout_height="258dp">

    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/wmp_vista_screen"/>


    <FrameLayout
        android:id="@+id/wmp_video_container"
        android:layout_marginTop="21dp"
        android:layout_marginStart="0dp"
        android:layout_width="280dp"
        android:layout_height="200dp"
        android:background="@android:color/black">

        <VideoView
            android:id="@+id/wmp_video_player"
            android:layout_width="280dp"
            android:layout_height="200dp"
            android:layout_gravity="center"/>
    </FrameLayout>

    <ScrollView
        android:id="@+id/wmp_playlist_scroll"
        android:layout_width="match_parent"
        android:layout_height="197dp"
        android:layout_marginStart="280dp"
        android:layout_marginEnd="0dp"
        android:layout_marginTop="21dp">
        <TableLayout
            android:id="@+id/wmp_playlist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </ScrollView>

    <View
        android:id="@+id/wmp_play_pause_toggle"
        android:layout_marginTop="227dp"
        android:layout_marginStart="177dp"
        android:layout_width="25dp"
        android:layout_height="25dp"/>


    <LinearLayout
        android:id="@+id/wmp_track"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="212dp">
        <ImageView
            android:id="@+id/wmp_tab"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:padding="4dp"
            android:src="@drawable/wmp_vista_thumb"/>
    </LinearLayout>
    
</RelativeLayout>