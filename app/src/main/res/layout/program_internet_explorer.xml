<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:background="?windowBackgroundColor"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start">
        <ImageView
            android:layout_width="284dp"
            android:layout_height="93dp"
            android:background="@drawable/ie6_top_left"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="93dp"
            android:layout_weight="1"
            android:background="@drawable/ie6_top_middle"/>
        <ImageView
            android:layout_width="72dp"
            android:layout_height="93dp"
            android:background="@drawable/ie6_top_right"/>

    </LinearLayout>


    <EditText
        android:id="@+id/url_bar"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/white"
        android:layout_marginLeft="73dp"
        android:layout_marginRight="70dp"
        android:layout_marginTop="69dp"
        android:textSize="11dp"
        android:text="www.google.com"
        android:textColor="@color/black"
        android:fontFamily="@font/micross_block"
        android:lines="1"
        android:maxLines="1"
        android:singleLine="true"
        android:imeOptions="actionGo"
        android:inputType="textUri"
        />

    <View
        android:id="@+id/ie_go_button"
        android:layout_width="50dp"
        android:layout_height="23dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="67dp"
        android:layout_marginEnd="2dp"/>

    <View
        android:id="@+id/ie_refresh_button"
        android:layout_width="50dp"
        android:layout_height="39dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="124dp" />

    <View
        android:id="@+id/ie_tools_button"
        android:layout_width="40dp"
        android:layout_height="25dp"
        android:layout_marginTop="0dp"
        android:layout_marginStart="174dp" />

    <View
        android:id="@+id/ie_back_button"
        android:layout_width="60dp"
        android:layout_height="39dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="26dp"
        android:layout_marginStart="12dp" />

    <View
        android:id="@+id/ie_forward_button"
        android:layout_width="60dp"
        android:layout_height="39dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="26dp"
        android:layout_marginStart="75dp" />

    <View
        android:id="@+id/ie_home_button"
        android:layout_width="50dp"
        android:layout_height="39dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="74dp" />


    <View
        android:id="@+id/ie_search_button"
        android:layout_width="50dp"
        android:layout_height="39dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="18dp" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/ie_loading_gif"
        android:layout_width="37.5dp"
        android:layout_height="23.5dp"
        android:layout_marginEnd="2.3dp"
        android:layout_marginTop="2.3dp"
        android:src="@drawable/ie_loading"
        android:layout_alignParentEnd="true"
        android:adjustViewBounds="true" />


    <WebView
        android:id="@+id/ie_web_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="93dp"
        android:layout_marginBottom="22dp"
        android:background="@color/context_menu_background">
    </WebView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:gravity="start">
        <ImageView
            android:layout_width="284dp"
            android:layout_height="22dp"
            android:background="@drawable/ie6_bottom_left"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="22dp"
            android:layout_weight="1"
            android:background="@drawable/ie6_bottom_middle"/>
        <ImageView
            android:layout_width="14dp"
            android:layout_height="22dp"
            android:background="@drawable/ie6_bottom_right"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        >
        <ImageView
            android:id="@+id/status_icon"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_marginStart="3dp"
            android:layout_marginTop="1dp"
            android:src="@drawable/ie_status_done"
            />
        <TextView
            android:id="@+id/status_text"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Done"
            android:fontFamily="@font/micross_block"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:layout_alignBottom="@id/status_icon"
            android:layout_toEndOf="@id/status_icon"
            android:layout_marginStart="3dp"/>
    </LinearLayout>

</RelativeLayout>